<%= turbo_frame_tag "new_signature" do %>
  <div class="card">
    <p class="card-header"><%= t("signatures.otp.title") %></p>
    <div class="flex justify-between">
      <div>
        <p class="card-paragraph">
          <%= t("sms_verifications.sms_disclaimer", phone_number: @memberable.phone_number) %>
        </p>
      </div>
      <div>
        <%= link_to t(".send_code"), otp_meeting_document_path(@meeting, @document), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>