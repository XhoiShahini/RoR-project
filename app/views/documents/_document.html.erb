<%= turbo_frame_tag dom_id(document) do %>
  <div class="card">
    <div class="flex justify-between items-center">
      <div>
        <p class="font-semibold text-primary-500"><%= document.title %></p>
        <p class="card-paragraph">
          <%= document.aasm.human_state %>
        </p>
      </div>
      <div class="flex">
        <%= link_to download_meeting_document_path(document.meeting, document), class: "btn btn-small text-lg btn-primary", data: { turbo_frame: "_top" } do %>
          <%= fa_icon "download", weight: "fas" %>
        <% end %>
        <% if @host %>
          <%= button_to meeting_document_path(document.meeting, document), method: :delete, class: "btn btn-small text-lg btn-danger outline ml-2" do %>
            <%= fa_icon "trash", weight: "fas" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>