<%= turbo_frame_tag "new_signature" do %>
  <div class="card">
    <p class="card-header"><%= t(".title") %></p>
    <div class="flex justify-between">
      <p class="card-paragraph"><%= t(".instructions") %></p>
      <%= link_to sign_meeting_document_path(@meeting, @document), class: "btn btn-secondary" do %>
        <%= fa_icon "file-signature", weight: "fas", class: "mr-2" %>
        <%= t('.sign') %>
      <% end %>
    </div>
  </div>
<% end %>