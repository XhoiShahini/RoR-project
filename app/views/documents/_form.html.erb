<%= form_with(model: document, url: meeting_documents_path(document.meeting)) do |form| %>
  <%= render "shared/error_messages", resource: document %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :file %>
    <%= form.file_field :file, accept: "application/pdf", class: "form-control" %>
  </div>

  <div class="form-group">
    <div>
      <%= form.check_box :require_read %>
      <%= form.label :require_read, class: "inline-block" %>
    </div>
    <div>
      <%= form.check_box :read_only %>
      <%= form.label :read_only, class: "inline-block" %>
    </div>
  </div>

  <%= form.button t(".submit"), class: "btn btn-primary" %>
<% end %>