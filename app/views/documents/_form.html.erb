<% document_form_data = {
  controller: "form-loading",
  action: "submit->form-loading#loading",
  form_loading_load_with_value: t(".uploading")
} %>
<%= form_with(model: document, url: meeting_documents_path(document.meeting), data: document_form_data) do |form| %>
  <%= render "shared/error_messages", resource: document %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :file %>
    <%= form.file_field :file, accept: "application/pdf", class: "form-control" %>
  </div>

  <div class="form-group">
    <div>
      <%= form.check_box :read_only, class: "form-checkbox mr-2" %>
      <%= form.label :read_only, class: "inline-block" %>
    </div>
  </div>

  <%= form.button t(".submit"), class: "btn btn-primary", data: { form_loading_target: "button" } %>
<% end %>